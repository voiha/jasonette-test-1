  {
    "$jason": {
      "head": {
        "actions": {
            "handleLink": {
              "type": "$util.banner",
              "options": {
                  "title": "Link clicked",
                  "description": "{{$jason.url}}"
                    }
                },
          "$load": {
            "type": "$agent.request",
            "options": {
              "id": "$webcontainer",
              "method": "login",
              "params": ["alice", "1234"]
            }
          }
        }
      },
      "body": {
        "background": {
          "type": "html",
          "url": "https://developers.mypos.eu/",
          "action": {
              "trigger": "handleLink"
          }
        }
      }
    }
  }