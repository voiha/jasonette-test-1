  {
    "$jason": {
      "head": {
        "actions": {
            "visit": [
              {
                "{{#if /\\/(newest|show|ask)$/.test($jason.url) }}": {
                  "type": "$default"
                }
              },
              {
                "{{#else}}": {
                  "type": "$href",
                  "options": {
                    "url": "https://jasonette.github.io/Jasonpedia/webcontainer/agent/hijack.json",
                    "preload": {
                      "background": "#ffffff"
                    },
                    "options": {
                      "url": "{{$jason.url}}"
                    }
                  }
                }
              }
            ]
          },
          "$load": {
            "type": "$agent.request",
            "options": {
              "id": "$webcontainer",
              "method": "login",
              "params": ["alice", "1234"]
            }
          }
        }
      },
      "body": {
        "background": {
          "type": "html",
          "url": "https://developers.mypos.eu/",
          "action": {
              "trigger": "visit"
          }
        }
      }
    }
  }